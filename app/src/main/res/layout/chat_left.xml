<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_chat_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_left_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/chat_left_avatar"
        android:layout_below="@id/chat_left_time"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/chat_left_name"
        android:layout_toRightOf="@id/chat_left_avatar"
        android:layout_below="@id/chat_left_time"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:layout_height="15dp"
        android:gravity="center"/>


    <TextView
        android:padding="10dp"
        android:layout_below="@id/chat_left_name"
        android:id="@+id/chat_left_content"
        android:layout_toRightOf="@id/chat_left_avatar"
        android:layout_width="wrap_content"
        android:layout_marginRight="50dp"
        android:gravity="left|center"
        android:background="@drawable/chat_by_others"
        android:layout_height="wrap_content"/>
</RelativeLayout>