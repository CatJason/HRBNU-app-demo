<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_chat_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/chat_right_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/chat_right_avatar"
        android:layout_alignParentRight="true"
        android:layout_below="@id/chat_right_time"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/chat_right_name"
        android:layout_toLeftOf="@id/chat_right_avatar"
        android:layout_below="@id/chat_right_time"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="12dp"
        android:layout_height="15dp"/>

    <TextView
        android:padding="10dp"
        android:layout_below="@id/chat_right_name"
        android:layout_toLeftOf="@id/chat_right_avatar"
        android:id="@+id/chat_right_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="right|center"
        android:background="@drawable/chat_by_me"
        android:layout_height="wrap_content"/>
</RelativeLayout>