<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/email_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/email_loginui"
        android:layout_width="200dp"
        android:layout_height="240dp">

        <View
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:background="#bbccff"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="35dp"
            android:text="Across the Great Wall we can reach every corner in the world."
            android:textColor="@color/colorWhite"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textSize="15dp"/>
        <View
            android:id="@+id/cursor"
            android:layout_width="4dp"
            android:layout_height="13dp"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="29dp"
            android:background="@color/colorWhite"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/china_email"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <EditText
        android:layout_below="@id/email_loginui"
        android:id="@+id/txtEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address" />

    <EditText
        android:layout_below="@id/txtEmailAddress"
        android:id="@+id/txtPWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword" />

    <requestFocus />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/email_loginui"
        android:layout_above="@id/txtEmailAddress"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Enter" />

</RelativeLayout>


