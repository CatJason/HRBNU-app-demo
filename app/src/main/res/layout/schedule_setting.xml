<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="56dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_height="48dp"
            android:text="课程"/>
        <EditText
            android:id="@+id/set_cname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <View
            android:layout_width="56dp"
            android:layout_height="130dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ly_cname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="56dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_height="match_parent"
            android:text="描述"/>
        <EditText
            android:id="@+id/set_cdescrible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <Button
        android:id="@+id/set_name"
        android:layout_alignParentRight="true"
        android:layout_below="@id/enddata_set"
        android:layout_gravity="right"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorBlack"/>

    <RelativeLayout
        android:id="@+id/week_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/add_rule"
            android:layout_width="56dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_height="48dp"
            android:text="规则+"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add_rule">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <RelativeLayout
                android:id="@+id/rule_lyset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <LinearLayout
                android:id="@+id/week"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期日"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期一"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期二"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期三"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期四"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期五"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="星期六"/>

            </LinearLayout>
                <LinearLayout
                    android:id="@+id/week_set"
                    android:layout_below="@id/week"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:id="@+id/startdata_set"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/week_set"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:text="起始日期"/>
                    <EditText
                        android:id="@+id/start_yy"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="4"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="56dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="年"/>
                    <EditText
                        android:id="@+id/start_mm"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="月"/>

                    <EditText
                        android:id="@+id/start_dd"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="日"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/enddata_set"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/startdata_set"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="4"
                        android:text="结束日期"/>
                    <EditText
                        android:id="@+id/end_yy"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="4"/>
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="年"/>
                    <EditText
                        android:id="@+id/end_mm"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="月"/>

                    <EditText
                        android:id="@+id/end_dd"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="48dp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="日"/>
                </LinearLayout>
                <Button
                    android:id="@+id/set_set"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/enddata_set"
                    android:layout_width="72dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
        </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</LinearLayout>