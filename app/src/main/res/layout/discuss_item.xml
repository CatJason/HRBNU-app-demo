<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_discuss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack"/>
    <TextView
        android:id="@+id/discuss_time"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:gravity="right"
        android:textColor="@color/colorBlack"/>
    <RelativeLayout
        android:id="@+id/name_like"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/discuss_time"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/discuss_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/discuss_name"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/discuss_like"
                android:src="@drawable/like0"
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/discuss_like_sum"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@color/colorRed"/>

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/discuss_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/name_like"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/discuss_reply"
        android:layout_alignParentRight="true"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/discuss_content"
        android:gravity="right"
        android:text="进入讨论组"
        android:textColor="@color/colorBlack"/>
</RelativeLayout>


